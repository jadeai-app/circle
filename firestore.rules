rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can be read by any authenticated user for the dashboard.
    // A user can only create their own document during registration.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId;

      // Updates are handled by a secure Cloud Function, so no client-side update permission is needed.
      allow update: if false;
      allow delete: if false;
    }
  }
}